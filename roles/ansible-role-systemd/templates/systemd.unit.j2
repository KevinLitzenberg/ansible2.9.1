# see: Systemd Unit configuration logic -- http://man7.org/linux/man-pages/man5/systemd.unit.5.html

{% if "Unit" in config %}
[Unit]
{% for key, value in config["Unit"].items() %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}

[{{ config.type|default(default_unit_type)|title }}]
{% for key, value in config[config.type|default(default_unit_type)|title].items() %}
{{ key }}={{ value }}
{% endfor %}

{% if "Install" in config %}
[Install]
{% for key, value in config["Install"].items() %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}
